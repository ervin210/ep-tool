<!DOCTYPE html>
<html lang="en">
   <head>
      <script src="//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.22/require.min.js"></script>
      <link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/5.9.4/css/aui.css" media="all">
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
      <script src="//aui-cdn.atlassian.com/aui-adg/5.9.4/js/aui.js"></script>
      <script src="//aui-cdn.atlassian.com/aui-adg/5.9.4/js/aui-datepicker.js"></script>
      <link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/5.9.4/css/aui-experimental.css" media="all">
      <script src="//aui-cdn.atlassian.com/aui-adg/5.9.4/js/aui-experimental.js"></script>
      <script src="//aui-cdn.atlassian.com/aui-adg/5.9.4/js/aui-soy.js"></script>

      <link rel="stylesheet" type="text/css" href="/static/css/all.css">
      <script src="/static/js/app/user-entity-properties.js" type="text/javascript"></script>
      <script type="text/javascript">require(['app/user-entity-properties']);</script>

      {{=<% %>=}}
      <script id="property-panel" type="x-tmpl-mustache">
         <div class="panel panel-default property" data-property-key="{{key}}">
            <div class="panel-heading">
               <button class="aui-button delete-button"><span class="aui-icon aui-icon-small aui-iconfont-delete"></span></button>
               <h3 class="panel-title">{{key}}</h3>
            </div>
            <div class="panel-body">
               <div class="editor"></div>
            </div>
            <div class="status hidden"></div>
         </div>
      </script>
      <%={{ }}=%>
   </head>
   <body class="user-entity-properties">
      <section id="content" class="ac-content">
         <div class="aui-page-panel"><div class="aui-page-panel-inner"><section class="aui-page-panel-content">
            <form id="add-property-form" class="aui hidden">
               <h3>Add property</h3>
               <fieldset>
                  <div class="field-group">
                      <label for="add-property-key">Property key</label>
                      <input class="text long-field" id="add-property-key" title="property key" type="text" />

                      <div class="description">The key of your property.</div>
                  </div>
                  <div class="field-group">
                      <label for="add-property-value-editor">Property value</label>
                      <div class="panel-body">
                         <div id="add-property-value-editor" class="editor"></div>
                      </div>
                  </div>
               </fieldset>
               <div class="buttons-container">
                  <div class="buttons">
                      <input class="button submit" value="Save" id="add-property-save" type="submit">
                      <a id="add-property-cancel" class="cancel" href="#">Cancel</a>
                  </div>
               </div>
            </form>

            <div class="controls">
               <button id="add-property-button" class="aui-button add-property"><span class="aui-icon aui-icon-small aui-iconfont-add"></span> Add property</button>
               <form class="aui top-label">
                  <fieldset class="top-label">
                     <div class="field-group top-label">
                        <input class="text" type="text" id="property-filter" placeholder="Property filter..."></input>
                     </div>
                  </fieldset>
               </form>
            </div>

            <div class="properties"></div>
         </section></div></div>
      </section>
   </body>
</html>
