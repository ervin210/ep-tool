      <link rel="stylesheet" type="text/css" href="/static/css/all.css">
      <script src="/static/js/app/issue-entity-properties.js" type="text/javascript"></script>
      <script type="text/javascript">require(['app/issue-entity-properties']);</script>

      {{=<% %>=}}
      <script id="property-panel" type="x-tmpl-mustache">
         <div class="panel panel-default property" data-property-key="{{key}}">
            <div class="panel-heading">
               <button class="aui-button delete-button"><span class="aui-icon aui-icon-small aui-iconfont-delete"></span></button>
               <h3 class="panel-title">{{key}}</h3>
            </div>
            <div class="panel-body">
               <div class="editor"></div>
            </div>
            <div class="status hidden"></div>
         </div>
      </script>
      <%={{ }}=%>
   </head>
   <body class="issue-entity-properties">
      <section id="content" class="ac-content">
         <form class="aui top-label">
            <fieldset class="top-label">
               <div class="field-group top-label">
                  <input class="text" type="text" id="property-filter" placeholder="Property filter..."></input>
               </div>
            </fieldset>
         </form>

         <div class="properties"></div>
      </section>
   </body>
</html>
